@model IEnumerable<EntityLayer.Concrete.About>

<div class="site-footer">
    <div class="container">
        <div class="row mb-5">
            @foreach (var x in Model)
            {
                <div class="col-md-4">
                    <h3 class="footer-heading mb-4">Hakkımızda</h3>
                    <p>
                        @Html.Raw(x.AboutContent1.Length > 150
                            ? x.AboutContent1.Substring(0, 150) + "..."
                            : x.AboutContent1)
                    </p>

                </div>
            }
        <div class="col-md-3 ml-auto">
            <h3 class="footer-heading mb-4">Menüler</h3>
            <ul class="list-unstyled float-left mr-5">
                <li><a href="/Blog/Index/">Ana Sayfa</a></li>
                <li><a href="/About/Index/">Hakkımızda</a></li>
                <li><a href="/Contact/SendMessage/">İletişim</a></li>
                <li><a href="/Login/AuthorLogin/">Yazar Girişi</a></li>
            </ul>
            </div>

            <div class="col-md-4">
                <div>
                    <h3 class="footer-heading mb-4">Connect With Us</h3>
                    <p>
                        <a href="#"><span class="icon-facebook pt-2 pr-2 pb-2 pl-0"></span></a>
                        <a href="#"><span class="icon-twitter p-2"></span></a>
                        <a href="#"><span class="icon-instagram p-2"></span></a>
                        <a href="#"><span class="icon-rss p-2"></span></a>
                        <a href="#"><span class="icon-envelope p-2"></span></a>
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <p>
                    Copyright &copy;
                    <script>document.write(new Date().getFullYear());</script> Tüm hakları saklıdır. | Aşkla, Meşkle, Şevkle Yapıldı. <i class="icon-heart text-danger" aria-hidden="true"></i>

                </p>
            </div>
        </div>
    </div>
</div>
